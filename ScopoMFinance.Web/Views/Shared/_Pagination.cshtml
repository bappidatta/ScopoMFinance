@model NtitasCommon.Core.Common.PagerSettings

@if (Model != null && Model.TotalRecords > Model.PageSize)
{
    <ul class="pager">
        @if (Model.CurrentPage > 0)
        {
            <li>
                <a href="@String.Format(Model.URLFormat, 0)" class="first" aria-label="First"><i class="zmdi zmdi-chevron-left"></i></a>
            </li>
            <li>
                <a href="@String.Format(Model.URLFormat, Model.CurrentPage - 1)" class="previous">Previous</a>
            </li>
        }
        else
        {
            <li class="disabled">
                <span aria-label="First" class="first"><i class="zmdi zmdi-chevron-left"></i></span>
            </li>
            <li class="disabled">
                <span>Previous</span>
            </li>
        }

        @foreach (int i in Model.PageNumbersToDisplay)
        {
            if (Model.CurrentPage == i)
            {
                <li class="active">
                    <span>@(i + 1) <span class="sr-only">(current)</span></span>
                </li>
            }
            else if (i == -1)
            {
                <li>..</li>
            }
            else
            {
                <li>
                    <a href="@String.Format(Model.URLFormat, i)"> @(i + 1)</a>
                </li>
            }
        }

        @if (Model.CurrentPage < Model.Pages - 1)
        {
            <li>
                <a href="@String.Format(Model.URLFormat, Model.CurrentPage + 1)" class="next">Next</a>
            </li>
            <li>
                <a href="@String.Format(Model.URLFormat, Model.Pages - 1)" class="last" aria-label="Last"><i class="zmdi zmdi-chevron-right"></i></a>
            </li>
        }
        else
        {
            <li class="disabled">
                <span>Next</span>
            </li>
            <li class="disabled">
                <span aria-label="Last" class="last"><i class="zmdi zmdi-chevron-right"></i></span>
            </li>
        }
    </ul>
}

