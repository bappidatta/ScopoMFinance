<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <title>ScopoMFinance | @ViewBag.Title</title>
    <!-- Tell the browser to be responsive to screen width -->
    <meta content="width=device-width, initial-scale=1, maximum-scale=1, user-scalable=no" name="viewport">
    <!-- Bootstrap 3.3.6 -->
    <link rel="stylesheet" href="~/Content/theme/bootstrap/css/bootstrap.min.css">
    <link href="~/Content/bootstrap-datepicker/css/datepicker.css" rel="stylesheet" />
    <!-- Font Awesome -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.5.0/css/font-awesome.min.css">
    <!-- Ionicons -->
    <link href="~/Content/bootstrap-datepicker/css/datepicker.css" rel="stylesheet" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/ionicons/2.0.1/css/ionicons.min.css">
    <!-- Theme style -->
    <link rel="stylesheet" href="~/Content/theme/dist/css/AdminLTE.min.css">
    <!-- AdminLTE Skins. Choose a skin from the css/skins
         folder instead of downloading all of them to reduce the load. -->
    <link rel="stylesheet" href="~/Content/theme/dist/css/skins/_all-skins.min.css" />    
    <link href="https://fonts.googleapis.com/css?family=Raleway" rel="stylesheet">
    <!--UICalender-->
    <link href="~/Content/uicalender/fullcalendar.min.css" rel="stylesheet" />
    <link rel="stylesheet" href="~/Content/Style.css" />
    <!--Fixed Header Table-->
    <link href="~/Scripts/FixedHeaderTable/defaultTheme.css" rel="stylesheet" />
    <!-- HTML5 Shim and Respond.js IE8 support of HTML5 elements and media queries -->
    <!-- WARNING: Respond.js doesn't work if you view the page via file:// -->
    <!--[if lt IE 9]>
    <script src="https://oss.maxcdn.com/html5shiv/3.7.3/html5shiv.min.js"></script>
    <script src="https://oss.maxcdn.com/respond/1.4.2/respond.min.js"></script>
    <![endif]-->
    
</head>
<body class="hold-transition skin-black layout-top-nav">
    <!-- Site wrapper -->
    <div class="wrapper">
        <header class="main-header">
            <!-- Header Navbar: style can be found in header.less -->
            <nav class="navbar navbar-static-top">
                <div class="navbar-header pull-left">
                    <a class="navbar-brand" href="#" style="color: #999;"><b style="color: lightblue!important;">Scopo</b>MFinance</a>
                </div>
                
                @{
                    if (Request.IsAuthenticated)
                    {
                        string userName = @User.Identity.Name.Split(',')[0];
                        userName = userName.First().ToString().ToUpper() + String.Join("",userName.Skip(1));

                        <ul class="nav navbar-nav">
                            @{
                                if (User.IsInRole("Commercial"))
                                {
                                    <li class="dropdown" style="margin-left: 238px;">
                                        <a href="#" class="dropdown-toggle text-menu" data-toggle="dropdown" aria-expanded="false">Commercial <span class="caret"></span></a>
                                        <ul class="dropdown-menu text-menu-items" role="menu">
                                            <li><a href="/Commercial/BackToBackLC/">Back To Back LC</a></li>
                                            <li><a href="/Commercial/BankForwarding/">Bank Forwarding</a></li>
                                            <li><a href="/Commercial/BL/">Bill of Lading</a></li>
                                            <li><a href="/Commercial/ExportInvoice/">Export Invoice</a></li>
                                        </ul>
                                    </li>
                                }

                            }                         
                        </ul>
                       

                        <div class="navbar-custom-menu">
                            <ul class="nav navbar-nav">
                                <!-- User Account: style can be found in dropdown.less -->
                                <!--Commercial-->
                                
                                <li class="dropdown user user-menu">
                                    <a href="#" class="dropdown-toggle" data-toggle="dropdown">
                                        <img src="~/Content/theme/dist/img/user2-160x160.jpg" class="user-image" alt="User Image">
                                        <span class="hidden-xs">@userName</span>
                                    </a>
                                    <ul class="dropdown-menu">
                                        <!-- User image -->
                                        <li class="user-header">
                                            <img src="~/Content/theme/dist/img/user2-160x160.jpg" class="img-circle" alt="User Image">
                                            <p>
                                                @userName
                                                @*<small>Member since Nov. 2012</small>*@
                                            </p>
                                        </li>
                                        <!-- Menu Body -->
                                        <li class="user-body">
                                            <div class="row">
                                                <div class="col-xs-4 text-center">
                                                    <a href="#">Followers</a>
                                                </div>
                                                <div class="col-xs-4 text-center">
                                                    <a href="#">Sales</a>
                                                </div>
                                                <div class="col-xs-4 text-center">
                                                    <a href="#">Friends</a>
                                                </div>
                                            </div>
                                            <!-- /.row -->
                                        </li>
                                        <!-- Menu Footer-->
                                        <li class="user-footer">
                                            <div class="pull-left">
                                                <a href="#" class="btn btn-default btn-flat">Profile</a>
                                            </div>
                                            <div class="pull-right">
                                                <a href="/Account/LogOff/" class="btn btn-default btn-flat">Sign out</a>
                                            </div>
                                        </li>
                                    </ul>
                                </li>
                                <!-- Control Sidebar Toggle Button -->
                            </ul>
                        </div>
                    }
                }
            </nav>
        </header>
        <!-- Content Wrapper. Contains page content -->
        <div class="content-wrapper">
            <!-- Main content -->
            <section class="content">
                @RenderBody()
            </section>
            <!-- /.content -->
        </div>
        <!-- /.content-wrapper -->
        <div class="clearfix"></div>
        <footer class="main-footer">
            <div class="pull-right hidden-xs">
                <b>Version</b> 2.3.3
            </div>
            <strong>Copyright &copy; 2016 <a href="http://ntitas.com" target="_blank">Ntitas</a>.</strong> All rights
            reserved.
        </footer>
        <!-- Add the sidebar's background. This div must be placed
             immediately after the control sidebar -->
        <div class="control-sidebar-bg"></div>
    </div>
    <!-- ./wrapper -->
    <!-- jQuery 2.2.0 -->
    <script src="~/Content/theme/plugins/jQuery/jQuery-2.2.0.min.js"></script>
    <!-- Bootstrap 3.3.6 -->
    <script src="~/Content/theme/bootstrap/js/bootstrap.min.js"></script>
    <!-- SlimScroll -->
    <script src="~/Content/theme/plugins/slimScroll/jquery.slimscroll.min.js"></script>
    <!-- FastClick -->
    <script src="~/Content/theme/plugins/fastclick/fastclick.js"></script>
    <!-- AdminLTE App -->
    <script src="~/Content/theme/dist/js/app.min.js"></script>

    <!-- Angular js-->
    <script type="text/javascript" src="~/Content/angular/angular.min.js"></script>
    <script src="~/Content/alertify/alertify.js"></script>
    <script src="~/Content/alertify/ngAlertify.js"></script>
    <script src="~/Content/momentjs/moment-2.14.1.min.js"></script>
    <script src="~/Content/bootstrap-datepicker/js/bootstrap-datepicker.js"></script>
    <!--loading bar-->
    <link rel='stylesheet' href='//cdnjs.cloudflare.com/ajax/libs/angular-loading-bar/0.9.0/loading-bar.min.css' type='text/css' media='all' />
    <script type='text/javascript' src='//cdnjs.cloudflare.com/ajax/libs/angular-loading-bar/0.9.0/loading-bar.min.js'></script>

    <!--UICalender-->
    <script src="~/Content/uicalender/calendar.js"></script>
    <script src="~/Content/uicalender/fullcalendar.min.js"></script>
    <script src="~/Content/uicalender/gcal.js"></script>
    <!--Fixed Header Table-->
    <script src="~/Scripts/FixedHeaderTable/jquery.mousewheel.js"></script>
    <script src="~/Scripts/FixedHeaderTable/jquery.fixedheadertable.min.js"></script>
    <script src="~/Scripts/jQueryTableHeadFixer/tableHeadFixer.js"></script>

    <!--Utlity JS-->
    <script src="~/Scripts/scopoApp/utility.js"></script>

    @*<script src="~/Areas/Orders/Scripts/app.js"></script>*@
    <script src="~/Scripts/scopoApp/app.js"></script>


    <script src="~/Areas/Production/Scripts/services/styleConfigureService.js"></script>
    <script src="~/Areas/Production/Scripts/controllers/styleConfigureCtrl.js"></script>

    <script src="~/Areas/Orders/Scripts/services/stylesService.js"></script>
    <script src="~/Areas/Orders/Scripts/controllers/stylesCtrl.js"></script>

    <script src="~/Areas/Orders/Scripts/services/purchaseOrderService.js"></script>
    <script src="~/Areas/Orders/Scripts/controllers/purchaseOrderCtrl.js"></script>

    <script src="~/Areas/Materials/Scripts/services/expenseService.js"></script>
    <script src="~/Areas/Materials/Scripts/controllers/expenseCtrl.js"></script>

    <!--Inventory-->
    <script src="~/Areas/Store/Scripts/services/inventoryService.js"></script>
    <script src="~/Areas/Store/Scripts/controllers/inventoryCtrl.js"></script>
    <!--Stackholders-->
    <script src="~/Areas/Stackholder/Scripts/controllers/stackholdersCtrl.js"></script>
    <script src="~/Areas/Stackholder/Scripts/services/stackholdersService.js"></script>

    <!--Commercial/BackToBackLC-->
    <script src="~/Areas/Commercial/Scripts/controllers/backToBackLCCtrl.js"></script>
    <script src="~/Areas/Commercial/Scripts/services/backToBackLCService.js"></script>

    <!--Commercial/BankForwarding-->
    <script src="~/Areas/Commercial/Scripts/controllers/bankForwardingCtrl.js"></script>
    <script src="~/Areas/Commercial/Scripts/services/bankForwardingService.js"></script>

    <!--Commercial/ExportInvoice-->    
    <script src="~/Areas/Commercial/Scripts/controllers/exportInvoiceCtrl.js"></script>
    <script src="~/Areas/Commercial/Scripts/services/exportInvoiceService.js"></script>

    <!--Commercial/BL-->
    <script src="~/Areas/Commercial/Scripts/controllers/blCtrl.js"></script>
    <script src="~/Areas/Commercial/Scripts/services/blService.js"></script>

    <!--Production/Settings-->
    <script src="~/Areas/Production/Scripts/controllers/settingsCtrl.js"></script>
    <!--ProductionStatus-->
    <script src="~/Areas/Production/Scripts/controllers/productionStatusCtrl.js"></script>
    <script src="~/Areas/Production/Scripts/services/productionStatusService.js"></script>
    
    <!--Realization-->
    <script src="~/Areas/Finance/Scripts/controllers/realizationCtrl.js"></script>
    <script src="~/Areas/Finance/Scripts/services/realizationService.js"></script>
 

    <!--Accounts/Voucher-->
    <script src="~/Areas/Accounts/Scripts/services/voucherService.js"></script>
    <script src="~/Areas/Accounts/Scripts/controllers/voucherCtrl.js"></script>

    
    <script type="text/javascript">
        $(document).ready(function () {
            $('.scrollable').slimscroll({
                wheelStep: 20
            });
        });

        //Date picker
       
        $('.datepicker').live('click', function () {
            $(this).datepicker({ autoclose: true }).focus();
        });


        $('#myTabs a').click(function (e) {
            e.preventDefault()
            $(this).tab('show')
        });

        

    </script>



   
</body>
</html>