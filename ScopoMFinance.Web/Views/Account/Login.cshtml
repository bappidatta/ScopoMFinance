@using ScopoMFinance.Web.Models
@model LoginViewModel
@{
    Layout = "~/Views/Shared/_LoginLayout.cshtml";
    ViewBag.Title = "Log in";
}

<div class="row login-box">
    <div class="col s4 offset-s4">
        <h1 class="brand-logo orange-text text-darken-4"><b class="light-blue-text">Scopo</b>MFinance</h1>
        <h4 class="header center grey-text text-lighten-5">Use your account information to log in.</h4>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "header center red-text text-darken-1" })
        @using (Html.BeginForm("Login", "Account", new { ReturnUrl = ViewBag.ReturnUrl }, FormMethod.Post, new { @class = "col s12" }))
        {
            @Html.AntiForgeryToken()
            <div class="row">
                <div class="input-field col s12">
                    @Html.DropDownListFor(m => m.BranchId, ViewBag.BranchDropDown as SelectList, "Select Branch", new { @class = "browser-default" })
                    @Html.ValidationMessageFor(m => m.BranchId, "", new { @class = "red-text text-darken-1", @data_error = "wrong", @data_success = "right" })
                </div>
            </div>
            <div class="row">
                <div class="input-field col s12">
                    @Html.TextBoxFor(m => m.Email, new { @class = "validate", @type = "email" })
                    @Html.LabelFor(m => m.Email)
                    @Html.ValidationMessageFor(m => m.Email, "", new { @class = "red-text text-darken-1", @data_error = "wrong", @data_success = "right" })
                </div>
            </div>
            <div class="row">
                <div class="input-field col s12">
                    @Html.PasswordFor(m => m.Password, new { @class = "validate" })
                    @Html.LabelFor(m => m.Password)
                    @Html.ValidationMessageFor(m => m.Password, "", new { @class = "red-text text-darken-1", @data_error = "wrong", @data_success = "right" })
                </div>
            </div>
            <div class="row">
                <div class="col s12">
                    <input type="submit" value="Log in" class="waves-effect waves-light btn right" />
                </div>
            </div>
        }
    </div>
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
