@model ScopoMFinance.Domain.ViewModels.Org.OrgCOMappingViewModel

<section class="panel">
    <div class="panel-heading">
        <h3>@ViewBag.Title</h3>
    </div>
    <div class="panel-body row">
        <div class="col-md-12">
            @using (Html.BeginForm("MapCreditOfficer", "Organization", new { area = "Branch" }, FormMethod.Post))
            {
                @Html.AntiForgeryToken()

                <div class="form-group row">
                    @Html.LabelFor(m => m.CreditOfficerId, new { @class = "col-md-3 control-label" })
                    <div class="col-md-3">
                        @Html.DropDownListFor(m => m.CreditOfficerId, ViewBag.CreditOfficerDropDown as SelectList, "Select Credit Officer", new { @class = "form-control" })
                        @Html.ValidationMessageFor(m => m.CreditOfficerId, "", new { @class = "text-danger" })
                    </div>
                </div>
                <div class="form-group row">
                    <div id="mappedListContainer" class="col-md-6"></div>
                </div>

                <div class="form-actions">
                    <div class="form-group row">
                        <div class="col-md-offset-2 col-md-2">
                            @Html.ActionLink("Cancel", "Index", new { area = "Branch", controller = "Organization" }, new { @class = "btn btn-default btn-block" })
                        </div>
                        <div class="col-md-2">
                            <input type="submit" value="Save" class="btn btn-primary btn-block" />
                        </div>
                    </div>
                </div>
            }
        </div>
    </div>
</section>
@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
    @Scripts.Render("~/bundles/Branch/Scripts/Organization/MapCreditOfficer")
}
