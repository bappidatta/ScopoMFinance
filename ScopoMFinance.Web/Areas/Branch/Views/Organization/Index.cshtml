@model PList<ScopoMFinance.Domain.ViewModels.Org.OrganizationListViewModel>
@{
    ViewBag.Title = "Organization List";
}
<div class="panel panel-default">
    <div class="panel-body">
        <div class="col-md-12">
            @Html.ActionLink("New Organization", "Edit", new { area = "Branch", controller = "Organization" }, new { @class = "btn btn-primary" })
            <div class="list-count-container">
                <div class="list-count">
                    @Html.Partial("_ResultCountMessage", new ResultCountHelper { ItemCount = Model.Pager.TotalRecords })
                </div>
            </div>
            <table class="table table-striped table-hover table-condensed">
                <thead>
                    <tr>
                        <th>@Html.SortableHeaderActionLink(Html.DisplayNameFor(model => model.FirstOrDefault().OrgCategoryName), "Index", null, null, null, 0)</th>
                        <th>@Html.SortableHeaderActionLink(Html.DisplayNameFor(model => model.FirstOrDefault().OrganizationNo), "Index", null, null, null, 1)</th>
                        <th>@Html.SortableHeaderActionLink(Html.DisplayNameFor(model => model.FirstOrDefault().OrganizationName), "Index", null, null, null, 2)</th>
                        <th>@Html.SortableHeaderActionLink(Html.DisplayNameFor(model => model.FirstOrDefault().Gender), "Index", null, null, null, 3)</th>
                        <th>@Html.SortableHeaderActionLink(Html.DisplayNameFor(model => model.FirstOrDefault().SetupDate), "Index", null, null, null, 4)</th>
                        <th>@Html.SortableHeaderActionLink(Html.DisplayNameFor(model => model.FirstOrDefault().LoanColcOption), "Index", null, null, null, 5)</th>
                        <th>@Html.SortableHeaderActionLink(Html.DisplayNameFor(model => model.FirstOrDefault().SavColcOption), "Index", null, null, null, 6)</th>
                        <th>@Html.SortableHeaderActionLink(Html.DisplayNameFor(model => model.FirstOrDefault().FirstLoanColcDate), "Index", null, null, null, 7)</th>
                        <th>@Html.SortableHeaderActionLink(Html.DisplayNameFor(model => model.FirstOrDefault().FirstSavColcDate), "Index", null, null, null, 8)</th>
                    </tr>
                </thead>
                <tbody>
                    @if (Model.Count() > 0)
                    {
                        foreach (var item in Model)
                        {
                            <tr>
                                <td>@item.OrgCategoryName</td>
                                <td>@item.OrganizationNo</td>
                                <td>@item.OrganizationName</td>
                                <td>@item.Gender</td>
                                <td>@item.SetupDate</td>
                                <td>@item.LoanColcOption</td>
                                <td>@item.SavColcOption</td>
                                <td>@item.FirstLoanColcDate</td>
                                <td>@item.FirstSavColcDate</td>
                            </tr>
                        }
                    }
                    else
                    {
                        <tr>
                            <td colspan="9" class="align-center"><strong>@NtitasCommon.Localization.CommonStrings.List_Empty</strong></td>
                        </tr>
                    }
                </tbody>
            </table>

            @if (Model != null && Model.Count() > 0)
            {
                <div class="row">
                    <div class="col-md-10">
                        @Html.Partial("/Views/Shared/_Pagination.cshtml", Model.Pager)
                    </div>
                    <div class="col-md-2">
                        @Html.Partial("/Views/Shared/_PagerSize.cshtml")
                    </div>
                </div>
            }
            
        </div>
    </div>
</div>