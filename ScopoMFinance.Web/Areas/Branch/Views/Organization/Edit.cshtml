@model ScopoMFinance.Domain.ViewModels.Org.OrganizationEditViewModel

<section class="panel panel-default">
    <div class="panel-heading">
        <h3>@ViewBag.Title</h3>
    </div>
    <div class="panel-body row">
        <div class="col-md-12">
            @using (Html.BeginForm("Edit", "Organization", new { area = "Branch" }, FormMethod.Post))
            {
                @Html.AntiForgeryToken()
                @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                @Html.HiddenFor(model => model.Id)

                <div class="form-group row">
                    @Html.LabelFor(m => m.OrgCategoryId, new { @class = "col-md-3 control-label" })
                    <div class="col-md-3">
                        @Html.DropDownListFor(m => m.OrgCategoryId, ViewBag.OrgCategoryDropDown as SelectList, "Select Category", new { @class = "form-control" })
                        @Html.ValidationMessageFor(m => m.OrgCategoryId, "", new { @class = "text-danger" })
                    </div>

                    @Html.LabelFor(m => m.GenderId, new { @class = "col-md-3 control-label" })
                    <div class="col-md-3">
                        @Html.DropDownListFor(m => m.GenderId, ViewBag.GenderDropDown as SelectList, "Select Gender", new { @class = "form-control" })
                        @Html.ValidationMessageFor(m => m.GenderId, "", new { @class = "text-danger" })
                    </div>
                </div>

                <div class="form-group row">
                    @Html.LabelFor(m => m.OrganizationNo, new { @class = "col-md-3 control-label" })
                    <div class="col-md-3">
                        @Html.TextBoxFor(m => m.OrganizationNo, new { @class = "form-control" })
                        @Html.ValidationMessageFor(m => m.OrganizationNo, "", new { @class = "text-danger" })
                    </div>

                    @Html.LabelFor(m => m.OrganizationName, new { @class = "col-md-3 control-label" })
                    <div class="col-md-3">
                        @Html.TextBoxFor(m => m.OrganizationName, new { @class = "form-control" })
                        @Html.ValidationMessageFor(m => m.OrganizationName, "", new { @class = "text-danger" })
                    </div>
                </div>

                <div class="form-group row">
                    @Html.LabelFor(m => m.MeetingFrequencyId, new { @class = "col-md-3 control-label" })
                    <div class="col-md-3">
                        @Html.DropDownListFor(m => m.MeetingFrequencyId, ViewBag.LoanCollectionOptionDropDown as SelectList, "Select Collection Option", new { @class = "form-control" })
                        @Html.ValidationMessageFor(m => m.MeetingFrequencyId, "", new { @class = "text-danger" })
                    </div>

                    @Html.LabelFor(m => m.MeetingDate, new { @class = "col-md-3 control-label" })
                    <div class="col-md-3">
                        @Html.TextBoxFor(m => m.MeetingDate, "{0:" + NtitasCommon.Localization.CommonStrings.Date_Format + "}", new { @class = "form-control datepicker" })
                        @Html.ValidationMessageFor(m => m.MeetingDate, "", new { @class = "text-danger" })
                    </div>
                </div>

                <div class="form-group row">
                    @Html.LabelFor(m => m.SetupDate, new { @class = "col-md-3 control-label" })
                    <div class="col-md-3">
                        @Html.TextBoxFor(m => m.SetupDate, "{0:" + NtitasCommon.Localization.CommonStrings.Date_Format + "}", new { @class = "form-control", @disabled = "disabled" })
                        @Html.ValidationMessageFor(m => m.SetupDate, "", new { @class = "text-danger" })
                    </div>

                    @Html.LabelFor(m => m.IsActive, new { @class = "col-md-3 control-label" })
                    <div class="col-md-1">
                        @Html.CheckBoxFor(m => m.IsActive, new { @class = "form-control" })
                        @Html.ValidationMessageFor(m => m.IsActive, "", new { @class = "text-danger" })
                    </div>
                </div>

                <div class="form-actions">
                    <div class="form-group row">
                        <div class="col-md-offset-6 col-md-3">
                            @Html.ActionLink("Cancel", "Index", new { area = "Branch", controller = "Organization" }, new { @class = "btn btn-default btn-block" })
                        </div>
                        <div class="col-md-3">
                            <input type="submit" value="Save" class="btn btn-primary btn-block" />
                        </div>
                    </div>
                </div>
            }
        </div>
    </div>
</section>
@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}