@model List<ScopoMFinance.Domain.ViewModels.Component.MappedComponentViewModel>
<div class="table-responsive">
    <table class="table table-striped table-hover table-condensed">
        <thead>
            <tr>
                <th>Component</th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @if (Model.Count() > 0)
            {
                int i = 0;
                foreach (var item in Model)
                {
                    <tr>
                        <td>@item.ComponentName</td>
                        <td>
                            <input type="hidden" name="MappedComponentList[@i].ComponentId" value="@item.ComponentId" />
                            @Html.CheckBox("MappedComponentList[" + @i + "].Checked", item.Checked, new { @class = "form-control" })
                        </td>
                    </tr>
                    i++;
                }
            }
            else
            {
                <tr>
                    <td colspan="2" class="align-center"><strong>@NtitasCommon.Localization.CommonStrings.List_Empty</strong></td>
                </tr>
            }
        </tbody>
    </table>
</div>
